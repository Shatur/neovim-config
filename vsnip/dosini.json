{
  "CMake": {
    "prefix": ["cmake"],
    "body": [
      "[project-init:debug]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-debug && cd ../build-\\$(VIM_PRONAME)-debug && cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1 ../\\$(VIM_PRONAME) -G \"Ninja\" && mv compile_commands.json ../\\$(VIM_PRONAME)",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-build:debug]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\debug && cmake --build . --target ${1:\\$(VIM_PRONAME)}",
      "cwd=<root>",
      "errorformat=%f:%l:%m",
      "notify=echo",
      "",
      "[project-run:debug]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\debug && ./$1",
      "cwd=<root>",
      "output=terminal",
      "notify=echo",
      "",
      "[project-init:release]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-release && cd ../build-\\$(VIM_PRONAME)-release && cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1 -DCMAKE_BUILD_TYPE=Release ../\\$(VIM_PRONAME) -G \"Ninja\" && mv compile_commands.json ../\\$(VIM_PRONAME)",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-build:release]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\release && cmake --build . --target $1",
      "cwd=<root>",
      "errorformat=%f:%l:%m",
      "notify=echo",
      "",
      "[project-run:release]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\release && ./$1",
      "cwd=<root>",
      "output=terminal",
      "notify=echo"
    ],
    "description": "CMake task."
  },
  "QMake": {
    "prefix": ["qmake"],
    "body": [
      "[project-init:debug]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-debug && cd ../build-\\$(VIM_PRONAME)-debug && qmake ../\\$(VIM_PRONAME) CONFIG+=debug && compiledb -o ../\\$(VIM_PRONAME)/compile_commands.json -n make",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-build:debug]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\debug && make",
      "cwd=<root>",
      "errorformat=%f:%l:%m",
      "notify=echo",
      "",
      "[project-run:debug]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\debug && ./${1:\\$(VIM_PRONAME)}",
      "cwd=<root>",
      "output=terminal",
      "notify=echo",
      "",
      "[project-init:release]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-release && cd ../build-\\$(VIM_PRONAME)-release && qmake ../\\$(VIM_PRONAME) && compiledb -o ../\\$(VIM_PRONAME)/compile_commands.json -n make",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-build:release]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\release && make",
      "cwd=<root>",
      "errorformat=%f:%l:%m",
      "notify=echo",
      "",
      "[project-run:release]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\release && ./$1",
      "cwd=<root>",
      "output=terminal",
      "notify=echo"
    ],
    "description": "QMake task."
  }
}
