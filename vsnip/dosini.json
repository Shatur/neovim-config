{
  "CMake": {
    "prefix": ["cmake"],
    "body": [
      "[project-init:debug]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && cd ../build-\\$(VIM_PRONAME)-debug && cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1 ../\\$(VIM_PRONAME) -G \"Ninja\" && mv compile_commands.json ../\\$(VIM_PRONAME)",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-init:release]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && cd ../build-\\$(VIM_PRONAME)-release && cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1 -DCMAKE_BUILD_TYPE=Release ../\\$(VIM_PRONAME) -G \"Ninja\" && mv compile_commands.json ../\\$(VIM_PRONAME)",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-build]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && cmake --build .",
      "cwd=<root>",
      "errorformat=%f:%l:%m",
      "notify=echo",
      "",
      "[project-run]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && ./${1:\\$(VIM_PRONAME)}",
      "cwd=<root>",
      "notify=echo"
    ],
    "description": "CMake task."
  },
  "QMake": {
    "prefix": ["qmake"],
    "body": [
      "[project-init:debug]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && cd ../build-\\$(VIM_PRONAME)-debug && qmake ../\\$(VIM_PRONAME) CONFIG+=debug && compiledb -o ../\\$(VIM_PRONAME)/compile_commands.json -n make",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-init:release]",
      "command=mkdir -p ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && cd ../build-\\$(VIM_PRONAME)-release && qmake ../\\$(VIM_PRONAME) && compiledb -o ../\\$(VIM_PRONAME)/compile_commands.json -n make",
      "cwd=<root>",
      "notify=echo",
      "",
      "[project-build]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && make",
      "cwd=<root>",
      "errorformat=%f:%l:%m",
      "notify=echo",
      "",
      "[project-run]",
      "command=cd ../build-\\$(VIM_PRONAME)-\\$(VIM_PROFILE) && ./${1:\\$(VIM_PRONAME)}",
      "cwd=<root>",
      "notify=echo"
    ],
    "description": "QMake task."
  }
}
